#version 460 core
in vec2 texCoords;
layout (location = 0) out vec4 FragColor;

uniform sampler2D srcTexture;



void main()
{

    vec3 color = texture(srcTexture, texCoords).rgb;
    float brightness = dot(color, vec3(0.2126, 0.7152, 0.0722));
    
    if (brightness <= 1.0)
     return;
     
    FragColor = vec4(color, 1.0);
}
